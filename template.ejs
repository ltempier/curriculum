<!DOCTYPE html>
<html lang="fr" class="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= info.name %> - CV
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');

        body {
            font-family: 'Inter', system-ui, sans-serif;
            background-color: #000000;
            color: #e5e7eb;
        }

        @media print {
            body {
                background: white;
                color: black;
            }

            .bg-zinc-900,
            .bg-black,
            .border-zinc-800 {
                background: white !important;
                border-color: #333 !important;
            }

            .text-gray-400,
            .text-gray-500 {
                color: #444 !important;
            }

            .no-print {
                display: none;
            }
        }
    </style>
</head>

<body class="min-h-screen bg-black text-gray-300">

    <div class="max-w-6xl mx-auto bg-zinc-950 border border-zinc-800 shadow-2xl">

        <!-- Header -->
        <header class="bg-black border-b border-zinc-800 px-10 py-14">
            <div class="flex flex-col lg:flex-row justify-between gap-10">
                <div class="max-w-3xl">
                    <h1 class="text-5xl lg:text-6xl font-bold text-white tracking-tight">
                        <%= info.name %>
                    </h1>
                    <p class="text-2xl mt-3 text-gray-400 font-medium">Développeur Full Stack & Maker</p>
                    <p class="mt-6 text-lg leading-relaxed text-gray-300">
                        <%= info.summary %>
                    </p>
                </div>

                <div class="space-y-4 text-lg">
                    <div class="flex items-center gap-4">
                        <i class="fas fa-phone w-5 text-gray-500"></i>
                        <span>
                            <%= info.phone %>
                        </span>
                    </div>
                    <div class="flex items-center gap-4">
                        <i class="fas fa-envelope w-5 text-gray-500"></i>
                        <a href="mailto:<%= info.email %>" class="hover:text-white transition underline">
                            <%= info.email %>
                        </a>
                    </div>
                    <div class="flex items-center gap-4">
                        <i class="fas fa-map-marker-alt w-5 text-gray-500"></i>
                        <span>
                            <%= info.location %>
                        </span>
                    </div>
                    <div class="flex items-center gap-4">
                        <i class="fab fa-github w-5 text-gray-500"></i>
                        <a href="<%= info.github %>" target="_blank" class="hover:text-white transition underline">
                            github.com/ltempier
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-10 p-10">

            <!-- === COLONNE GAUCHE : 3 blocs séparés === -->
            <aside class="space-y-8">

                <!-- Bloc Compétences -->
                <section class="bg-zinc-900/70 border border-zinc-800 rounded-xl p-8">
                    <h2 class="text-2xl font-bold text-white pb-3 border-b border-zinc-700">Compétences</h2>
                    <div class="mt-6 space-y-4">
                        <% skills.forEach(skill=> { %>
                            <div class="flex justify-between items-center">
                                <span class="font-medium">
                                    <%= skill.name %>
                                </span>
                                <span class="text-sm font-bold text-gray-400">
                                    <%= skill.level %>
                                </span>
                            </div>
                            <% }) %>
                    </div>
                </section>

                <!-- Bloc Langues -->
                <section class="bg-zinc-900/70 border border-zinc-800 rounded-xl p-8">
                    <h2 class="text-2xl font-bold text-white pb-3 border-b border-zinc-700">Langues</h2>
                    <div class="mt-6 space-y-4">
                        <% Object.keys(languages).forEach(lang=> { %>
                            <div class="flex justify-between">
                                <span>
                                    <%= lang %>
                                </span>
                                <span class="font-semibold text-gray-400">
                                    <%= languages[lang] %>
                                </span>
                            </div>
                            <% }) %>
                    </div>
                </section>

                <!-- Bloc Centres d’intérêt -->
                <section class="bg-zinc-900/70 border border-zinc-800 rounded-xl p-8">
                    <h2 class="text-2xl font-bold text-white pb-3 border-b border-zinc-700">Centres d’intérêt</h2>
                    <div class="mt-6 flex flex-wrap gap-2">
                        <% hobbies.forEach(hobby=> { %>
                            <span
                                class="bg-zinc-800 text-gray-300 border border-zinc-700 px-4 py-2 rounded-xl text-sm font-medium">
                                <%= hobby %>
                            </span>
                            <% }) %>
                    </div>
                </section>

            </aside>

            <!-- === COLONNE PRINCIPALE === -->
            <main class="lg:col-span-2 space-y-16 pt-6">

                <!-- Expériences -->
                <section>
                    <h2 class="text-3xl font-bold text-white pb-4 border-b-2 border-zinc-700">Expériences</h2>
                    <% experience.forEach(exp=> { %>
                        <% const start=new Date(exp.dates[0]); const end=exp.dates[1]==='now' ? 'Aujourd’hui' : new
                            Date(exp.dates[1]); const formatDate=d=> d === 'Aujourd’hui' ? d :
                            d.toLocaleDateString('fr-FR', { month: 'short', year: 'numeric' });
                            %>
                            <div class="mt-12 pl-8 border-l-2 border-zinc-700">
                                <!-- Ligne titre + date toujours alignée horizontalement -->
                                <div class="flex items-start justify-between gap-6 -mb-1">
                                    <div class="flex-1 min-w-0">
                                        <!-- min-w-0 = autorise le texte à se couper proprement si trop long -->
                                        <h3 class="text-xl font-bold text-white leading-tight pr-4">
                                            <%= exp.title %>
                                                <% if (exp.company) { %>
                                                    <span class="font-normal text-gray-500">– <%= exp.company %></span>
                                                    <% } %>
                                        </h3>

                                        <% if (exp.location && exp.location !=='*' ) { %>
                                            <p class="text-gray-500 text-sm mt-1">
                                                <i class="fas fa-map-marker-alt mr-1"></i>
                                                <%= exp.location %>
                                            </p>
                                            <% } %>
                                    </div>

                                    <!-- La date est complètement isolée à droite et ne bouge jamais -->
                                    <div class="shrink-0 text-sm text-gray-500 font-medium whitespace-nowrap">
                                        <%= formatDate(start) %> → <%= formatDate(end) %>
                                    </div>
                                </div>

                                <!-- Les tâches -->
                                <ul class="mt-4 space-y-2 text-gray-400 list-disc list-inside">
                                    <% exp.tasks.forEach(task=> { %>
                                        <li>
                                            <%= task %>
                                        </li>
                                        <% }) %>
                                </ul>
                            </div>
                            <% }) %>
                </section>

                <!-- Formation -->
                <section>
                    <h2 class="text-3xl font-bold text-white pb-4 border-b-2 border-zinc-700">Formation</h2>
                    <% education.forEach(edu=> { %>
                        <div class="mt-10 pl-8 border-l-2 border-zinc-700">
                            <h3 class="text-xl font-semibold text-white">
                                <%= edu.degree %>
                            </h3>
                            <p class="text-gray-400 font-medium mt-1">
                                <%= edu.school %>
                            </p>
                            <p class="text-sm text-gray-500">
                                <%= new Date(edu.dates[0]).getFullYear() %> – <%= new Date(edu.dates[1]).getFullYear()
                                        %>
                            </p>
                        </div>
                        <% }) %>
                </section>

            </main>
        </div>
    </div>

</body>

</html>